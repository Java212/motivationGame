<?xml version="1.0" encoding="UTF-8"?>
<!-- https://logging.apache.org/log4j/2.x/manual/configuration.html#XML-->
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.apache" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="org.springframework" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="ru.inspired.model.MotivationEventsChecker" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="ru.inspired.model.DailyLogFileProcessor" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="ru.inspired.model.MotivationEventSimpleDao" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="ru.inspired.model.MotivationScoreCalc" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="warn">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>