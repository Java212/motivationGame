<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>FillInTodaysResultsServlet</servlet-name>
        <servlet-class>ru.inspired.web.FillInTodaysResultsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FillInTodaysResultsServlet</servlet-name>
        <url-pattern>/today</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TodayResultsWithPageServlet</servlet-name>
        <servlet-class>ru.inspired.web.TodayResultsWithPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TodayResultsWithPageServlet</servlet-name>
        <url-pattern>/today/jsp</url-pattern>
    </servlet-mapping>

    <!-- hello -->
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>ru.inspired.web.HelloServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

</web-app>